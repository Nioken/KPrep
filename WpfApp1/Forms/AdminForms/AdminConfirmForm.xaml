<Window x:Class="WpfApp1.Forms.AdminForms.AdminConfirmForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.Forms.AdminForms"
        mc:Ignorable="d"
        Title="Подтверждение прав администратора
        " Height="107.799" Width="284.819">
    <Grid>
        <WrapPanel>
            <Label Content="Пароль:" Margin="52,3,0,0"/>
            <PasswordBox x:Name="PasswordBox" Height="20" Width="100" Margin="0,3,0,0" BorderBrush="Black"/>
            <Image Source="pack://application:,,,/Assets/Images/ShowPass.png" Height="20" Margin="3,3,0,0" MouseEnter="Image_MouseEnter">
                <Image.ToolTip>
                    <TextBlock x:Name="ShowPassText"/>
                </Image.ToolTip>
            </Image>
        </WrapPanel>
        <WrapPanel>
            <Button Content="Подтвердить" Margin="100,40,0,0" Click="Button_Click"/>
        </WrapPanel>
    </Grid>
</Window>
